<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- *********** APPENDERS ******************************************** -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5p][%5.5t][%-40.40c %4L]%m%n</pattern>
        </encoder>
    </appender>

    <!-- *********** LOGGERS ********************************************** -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- <logger name="cz.syntea" level="DEBUG" /> -->
</configuration>