        <connection>scm:svn:${svnsUrl}/${svnRepo}/trunk/statistika</connection>
        <developerConnection>scm:svn:${svnsUrl}/${svnRepo}/trunk/statistika</developerConnection>
    </scm>
    -->
    
</project>
