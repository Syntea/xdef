<xd:def xmlns:xd      =  "http://www.xdef.org/xdef/4.2"
         xd:name      =  "main"
         xd:root      =  "Staff" >

         <Subject id="int(1, 999_999_999)" />

         <Person    xd:script="ref Subject"
                    name="string(1,30)"
                    surname="string(1,50)" />

         <Staff>
             <xd:mixed>
                 <Worker xd:script="ref Person; occurs *" />
                 <ExternalFirm xd:script="ref Subject; occurs *"
                                name="string(1,50)"
                                address="string(1,100)" />
             </xd:mixed>
         </Staff>

</xd:def>