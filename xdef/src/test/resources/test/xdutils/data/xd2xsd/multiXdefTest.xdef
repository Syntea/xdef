<xd:collection xmlns:xd = "http://www.syntea.cz/xdef/2.0">
    <xd:def xd:name = "main"
            xd:root = "FirmWorkers"
            xmlns:ext = "A.A" >
        <FirmWorkers>
            <Worker xd:script="ref ext_1#ext:Person; occurs +"
                    workerId="required int" />
        </FirmWorkers>
    </xd:def>
    <xd:def xd:name      =  "ext_1"
            xd:root      =  "hr:Person"
            xmlns:hr = "A.A"
            xmlns:ext = "b.b" >
        <hr:Person>
            <hr:Name>required string(1,30)</hr:Name>
            <hr:Surname>required string(1,50)</hr:Surname>
            <hr:DateOfBirth>required datetime('dd.MM.yyyy')</hr:DateOfBirth>
            <ext:Position xd:script="ref ext_2#ext:Position; occurs +" />
            <ext:Salary xd:script="ref ext_2#ext:Salary; occurs 1" />
        </hr:Person>
    </xd:def>
    <xd:def xd:name = "ext_2"
            xd:root = "fh:Position | fh:Salary"
            xmlns:fh = "b.b" >
        <fh:Position fh:place="optional string">
            <fh:Name>required string</fh:Name>
        </fh:Position>
        <fh:Salary fh:currency="string">required int</fh:Salary>
    </xd:def>
</xd:collection>