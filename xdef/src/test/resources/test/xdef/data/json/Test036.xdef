<xd:def xmlns:xd='http://www.xdef.org/xdef/4.1' xd:name='Test036' xd:root='a'>
<xd:declaration>
  type genre enum("Classic", "Country", "Folk", "Jazz", "Pop", "Pop punk",
             "Punk", "Punk rock", "Rap", "Rock", "R&amp;B", "Other");
</xd:declaration> 
<xd:xon name='a'>
{
  "Title": "optional jstring()",
  "Artists": [
    {%script="occurs 1..*",
      "Name": "string()",
      "Albums": [
        {%script="occurs 1..*",
          "Name": "string()",
          "Genre": [%oneOf,
               "genre()",
               ["occurs 1..*; genre()"]
           ],
          "ReleaseDate": "date()",
          "Label": "string()",
          "Tracks": [
            {%script="occurs 0..*",
              "Title": "string()",
              "Duration": "string(%pattern=['[0-9]{2}:[0-9]{2}'])",
              "Writer": "optional string()"
            }
          ]
        }
      ]
    }
  ]
}
</xd:xon>
</xd:def>