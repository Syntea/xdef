<DefSystemStatistics System='Provozni informacni system CKP'
    KodSystemu='PIS' KodPartnera='9999' Verze='2.5.1.0'
    ZeDne='25.01.2007' >
  <Macros>
    <Macro Name='MaxDate'>to_date('31.12.3000 23:59:59',
                          'DD.MM.YYYY HH24:MI.SS')</Macro>
  </Macros>
  <DefSQLs>
    <DefSQL  SQLName='GetKodDruhuVozidla' >
      SELECT KodDruhuVozidla FROM CC_DruhVozidla D
         WHERE D.IdDruhVozidla=:IdDruhVozidla
    </DefSQL>
    <DefSQL  SQLName='GetKodPojistitele' >
      SELECT KodPojistitele FROM CC_Pojistitel P
         WHERE P.IdPojistitel=:IdPojistitel
    </DefSQL>
    <DefSQL  SQLName='GetPojistitel' DimText='Pojistitel'>
      SELECT Pojistitel FROM CC_Pojistitel P
         WHERE P.IdPojistitel=:IdPojistitel
    </DefSQL>
  </DefSQLs>
  <DefDimensions>
    <DefDim    DimName='IdPojistitel'  ValueType='id'>
      <DimSQL  SQLName='GetKodPojistitele' DimText='Kod pojistitele'/>
      <DimSQL  SQLName='GetPojistitel'     DimText='Pojistitel'/>
    </DefDim>
    <DefDim    DimName='IdDruhVozidla'  ValueType='id'>
      <DimSQL  SQLName='GetKodDruhuVozidla' DimText='Kod druhu vozidla'/>
    </DefDim>
  </DefDimensions>
  <DefAggregations>
    <DefAggr   AggrName='PocetPojisteni' AggrType='COUNT' />
  </DefAggregations>
  <DefStatistics>
    <Statistics StatText='Pocet pojisteni dle druhu vozidla a pojistitele'
       StatName='PocPoj_DruhVozidla+Pojistitel_M'  PeriodIdSource='FROM'>
      <Dim   DimName='IdPojistitel'     DimText='Pojistitel' />
      <Dim   DimName='IdDruhVozidla'    DimText='Druh vozidla' />
      <Aggr  AggrName='PocetPojisteni'  AggrText='Pocet pojistencu' />
      <Param ParamName='From' DefaultValue='M-2M' ValueType='datetime_s'/>
      <Param ParamName='To' DefaultValue='M-2M' ValueType='datetime_s'/>
      <SQL>
          SELECT Zmena.IdPojistitel,Zmena.IdDruhVozidla,Zmena.Count(RowID)
          FROM PS_ZmenaVozidla Zmena,PS_Pojisteni Poj,PS_VozidloSmlouvy Voz
          WHERE Poj.IdVozidloSmlouvy=Voz.IdVozidloSmlouvy
            AND Zmena.IdVozidloSmlouvy=Voz.IdVozidloSmlouvy
            AND Zmena.PlatnostDo=$MaxDate
            AND Poj.PojisteniOd&lt;=:To
            AND Poj.PojisteniDo>=:From
      </SQL>
    </Statistics>
    <ContingStatistics StatText='Pocet pojisteni dle druhu vozidla'
       StatName='PocPoj_DruhVozidla_M'
       OrigStatName='PocPoj_DruhVozidla+Pojistitel_M'>
      <DimMinus DimName='IdPojistitel' />
    </ContingStatistics>
    <SuperStatistics StatText='Pocet pojisteni dle druhu vozidla celkem'
                     StatName='PocPoj_DruhVozidlaCelkem_M'
       OrigStatName='PocPoj_DruhVozidla+Pojistitel_M' >
      <DimPlus DimName='IdPojistitel'/>
    </SuperStatistics>
  </DefStatistics>
  <DefDistributions>
    <DistrSQL SQLName='SeznamPojistitelu'>
        SELECT IdPartner FROM CC_Partner Par WHERE Par.Class='Pojistitel'
    </DistrSQL>
    <DistrSQL  SQLName='FromPartnerToPojistitel'>
        SELECT IdPojistitel FROM CC_Pojistitel Poj, VR_DefPartner Par
        WHERE Par.Element=Poj.KodPojistitele
          AND Par.IdPartner=:IdPartner
    </DistrSQL>
    <Distribution ChannelType='S1' SQLName='SeznamPojistitelu'>
      <File FileType='S1A' StatName='PocPoj_DruhVozidla_M'>
        <Select DimName='IdPojistitel' SQLName='FromPartnerToPojistitel'/>
      </File>
      <File FileType='S1B' StatName='PocPoj_DruhVozidlaCelkem_M'/>
    </Distribution>
  </DefDistributions>
  <DefSchedules>
    <Schedule Time='25.1.2007 23:00:00' Reccur='M' Class='STATISTICS'
           Element='MES' StatName='PocPoj_DruhVozidla+Pojistitel_M' />
  </DefSchedules>
</DefSystemStatistics>